# Server Configuration
PORT=8080
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173

# Rate Limiting
GLOBAL_RATE_LIMIT_WINDOW_MS=60000
GLOBAL_RATE_LIMIT_MAX=60

# API Key Configuration
# Set to true to require API keys for all requests
API_KEY_REQUIRED=false
# Format: key:tier:name (comma-separated)
# Tiers: free, pro, enterprise
# Example: abc123:free:Test User,xyz789:pro:Company A,enterprise123:enterprise:Corp B
API_KEYS=

# Redis Configuration (Optional - for caching & rate limiting)
# Leave empty to use in-memory fallback
# Format: redis://[[username][:password]@]host[:port][/db-number]
REDIS_URL=

# Pinterest Configuration
PINTEREST_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
