{
  "version": 2,
  "builds": [
    {
      "src": "api/pinterest.js",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "24.x"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist",
        "buildCommand": "cd frontend && bash vercel-build.sh",
        "nodeVersion": "24.x"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/pinterest.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "framework": null
}